generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user") // "user" o "admin"
  cart      Cart[]
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       Float
  category    String
  imageUrl    String
  stock       Int

  carts       Cart[]   @relation("ProductToCart") // Relaci√≥n con el modelo Cart
}

model Cart {
  id        Int     @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int

  user      User    @relation(fields: [userId], references: [id])
  product   Product @relation(fields: [productId], references: [id], name: "ProductToCart") 
}

